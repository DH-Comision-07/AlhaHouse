<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/productCard.css" />
    <title>Product Card</title>
</head>
<body>
  <%- include("partials/header.ejs") %>

  <section class="product-section">
    <% joyeria.forEach((joyas) =>{ %> 

    <article class="product-card">
      <img src= <%= joyeria.image %> alt="Producto" class="product-image">
      <div class="product-details">
        <h2 class="product-name"> <%= joyeria.name %></h2>
        <p class="product-price"> <%= joyeria.price %> </p>
        <p class="product-description"> <%= joyeria.description %> </p>
      </div>
    </article>
    <% }) %>
  </section>
  <%- include("partials/footer.ejs") %>
</html>