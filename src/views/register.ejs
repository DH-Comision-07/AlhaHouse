<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="website icon" type="png" href="images/brandmark@2x-8.png" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/register.css" />
    <!-- <script src="/scripts.js" defer></script> -->
    <title>Bijou Boutique</title>
  </head>
  <body>
    <%- include("partials/header.ejs") %> <% if (errors) { %> <% for (let
    oneError in errors) { %> <% } %> <% } %>
    <main class="container-register">
      <div class="form">
        <form
          action="/register"
          method="POST"
          enctype="multipart/form-data"
          id="registerForm"
        >
          <h2 class="title">Registrar usuario</h2>
          <input
            type="text"
            name="name"
            class="controls"
            placeholder="Nombre"
            value="<%= locals.oldData ? oldData.name : null %>"
          />
          <% if (errors && errors.name) { %>
          <div class="text-danger"><%= errors.name.msg %></div>
          <% } %>
          <input
            type="text"
            name="surname"
            class="controls"
            placeholder="Apellido"
            value="<%= locals.oldData ? oldData.surname : null %>"
          />
          <% if (errors && errors.surname) { %>
          <div class="text-danger"><%= errors.surname.msg %></div>
          <% } %>
          <div class="password-container">
            <input
              type="password"
              name="password"
              class="controls"
              placeholder="Contrase√±a"
            />
            <span class="toggle-password" onclick="togglePasswordVisibility()"
              >üëÅÔ∏è
            </span>
          </div>
          <% if (errors && errors.password) { %>
          <div class="text-danger"><%= errors.password.msg %></div>
          <% } %>
          <input
            type="email"
            name="email"
            class="controls"
            placeholder="E-mail"
            value="<%= locals.oldData ? oldData.email : null %>"
          />
          <% if (errors && errors.email) { %>
          <div class="text-danger"><%= errors.email.msg %></div>
          <% } %>
          <br />
          <input type="file" name="image" />
          <% if (errors && errors.image) { %>
          <div class="text-danger"><%= errors.image.msg %></div>
          <% } %>
          <input class="submit" type="submit" />
          <input
            class="submit reset"
            type="reset"
            onclick="alert('Datos reestablecidos')"
          />
        </form>
      </div>
    </main>
    <%- include("partials/footer.ejs") %>
    <script src="/js/validate.js"></script>
    <script>
      function togglePasswordVisibility() {
        const passwordField = document.getElementById("pass");
        const passwordToggle = document.querySelector(".toggle-password");
        if (passwordField.type === "password") {
          passwordField.type = "text";
          passwordToggle.textContent = "üôà";
        } else {
          passwordField.type = "password";
          passwordToggle.textContent = "üëÅÔ∏è";
        }
      }
    </script>
  </body>
</html>
